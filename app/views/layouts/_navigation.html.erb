<%# navigation styled for Bootstrap 4.0 %>
<header class="header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar-custom-theme">
    <div class="container">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" id="navbar-custom-theme">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand" do %>
          <i class="glyphicon glyphicon-leaf main-color"></i> <span class="main-color">Pepperminty Marketing</span>
        <% end %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right navbar-toggleable">
          <%= render 'layouts/navigation_links' %>
        </ul>
      </div>

    </div>
  </nav>
</header>
