<%# navigation styled for Bootstrap 4.0 %>
<header class="header">

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="head-container">
      <a href="mailto:hello@pepperminty.co.uk" class="head-a"><p class="glyphicon glyphicon-envelope head-text"></p> hello@pepperminty.co.uk</a>
      <p class="glyphicon glyphicon-earphone head-text"></p><span class="head-text margin-right-10">0333 050 9485</span>
    </div>
    <div class="1container" style="width: 94%; margin-left: auto; margin-right: auto">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "1navbar-brand" do %>
          <!--<span class="glyphicon glyphicon-envelope mail-icon"></span> hello@peppermintymarketing.co.uk-->
          <%= image_tag "logo-alt.png" %>
        <% end %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right navbar-toggleable" style="margin-top: 3vh;">
          <%= render 'layouts/navigation_links' %>
        </ul>
      </div>

    </div>
  </nav>
</header>
