<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 text-left">
  <div class="blog-card">
    <%= display_main_image(post, 'top-rounded') %>

    <div class="blog-container">
      <h5><%= post.category.name rescue 'Digital Marketing' %></h5>
      <p class="margin-bottom-20 text-left" style="font-size: 1.5em;"><%= post.title %></p>
      <p class="footer-text margin-bottom-20">
        <%= distance_of_time_in_words(Time.at(post.created_at.to_i),Time.now).upcase %> AGO
      </p>
      <p class="text-center margin-bottom-20"><%= link_to 'Read More', post, class: "btn-style-alt small" %></p>
      <% if current_user %>
          <p class="text-right">
            <%= link_to 'Edit', edit_post_path(post), class: "control-link padding-right-10"  %>
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "control-link" %>
          </p>
      <% end %>
    </div>
  </div>
</div>