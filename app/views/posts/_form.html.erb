<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :content %>
    <%= form.cktext_area :content, id: :post_content, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, id: :post_main_image, class: "form-control", style: "padding: 10px; height: 46px;" %>
  </div>

  <div class="field form-group">
    <%= form.label :alt_text %>
    <%= form.text_field :alt_text, id: :post_alt_text, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :category %>
    <%= form.text_field :category, id: :post_category, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :post_author, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :status %>
    <%= form.number_field :status, id: :post_status, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn-style" %>
  </div>
<% end %>
