<%= form_with url: category_search_path, method: :get, local: true, class: 'form-inline' do |form| %>
    <%= form.select :keyword, Category.all.collect {|c| [c.name, c.id]}, {include_blank: 'All'},
                    class: "form-control float-right", style: "width:100%;", onchange: "this.form.submit();" %>
<% end %>