<%= form_with url: blog_search_index_path, method: :get, local: true, class: 'form-inline search-form' do |form| %>
  <div class="input-group input-group-md" style="width:100%;">
    <%= form.text_field :tag, value: params[:tag], class: 'form-control', placeholder: 'Search' %>
    <div class="input-group-btn">
      <%= form.button raw("<i class=\"glyphicon glyphicon-search\"></i>"), type: 'submit',
                                                                           class: "btn btn-default",
                                                                           id:'submit-search' %>
    </div>
  </div>
<% end %>