<div class="row more-content">
  <div class="section">
    <div class="col-xs-12 text-center margin-bottom-20">
      <h2>Forgot your password?</h2>
    </div>

    <div class="col-xs-12">
      <div class="col-xs-3"></div>

      <div class="col-xs-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="actions form-group">
              <%= f.submit "Send me reset password instructions", class: "btn-style-alt width-100-percent" %>
            </div>
        <% end %>
        <div class="padding-top-10"><%= render "devise/shared/links" %></div>
      </div>

      <div class="col-xs-3"></div>

    </div>

  </div>
</div>