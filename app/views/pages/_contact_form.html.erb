<div class="row contact-bg">
  <div class="col-md-12 text-center section-heading">Contact us for a quote</div>

  <div class="section" style="width:100%;">

    <div class="col-md-12 text-center margin-bottom-20">
      <h4>Let's chat, perhaps over some peppermint tea (or coffee, you decide)?</h4>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
      <div class="col-lg-3 col-md-3 col-sm-3"></div>

      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <%= form_tag(submit_query_url) do %>
            <div class="col-xs-12 col-md-6 text-left">
              <div class="form-group">
                <%= text_field_tag :name, nil, class:"form-control", required: true, placeholder: "Name" %>
              </div>
              <div class="form-group">
                <%= email_field_tag :email, nil, class:"form-control", required: true, placeholder: "Email ID" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-6 text-left">
              <div class="form-group">
                <%= text_field_tag :company_name, nil, class:"form-control", required: true, placeholder: "Company Name" %>
              </div>
              <div class="form-group">
                <%= telephone_field_tag :phone, nil, class:"form-control", required: true, placeholder: "Telephone" %>
              </div>
            </div>
            <div class="col-md-12 text-center">
              <div class="form-group">
                <%= select_tag "category", options_for_select(@categories), include_blank: false, required: true,
                               class: 'form-control', prompt: 'Select Category' %>
              </div>
              <div class="form-group">
                <%= text_area_tag "message", "", "cols": 20, "rows": 4, required: true, placeholder: 'Message', class: "form-control" %>
              </div>
              <div class="form-group">
                <!--<div class="g-recaptcha" data-sitekey="6LdARXwUAAAAAMdOEdOOB_HXIQf07XFiIHJ5XYeX"></div>-->
                <div class="text-center">
                  <%= submit_tag 'Submit', class: "btn-style", style: "width: 100%;" %>
                </div>
              </div>
            </div>
        <% end %>
      </div>

      <div class="col-lg-6 col-md-6 col-sm-6"></div>
    </div>
  </div>
</div>
