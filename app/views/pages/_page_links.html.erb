<div class="col-xs-12 text-center link-container">

  <% unless (service == 'website') %>
    <%= link_to website_path, class: "col-md-3" do %>
        <div class="page-link">
          <%= image_tag 'icon-home-browser-w.png' %><br/><br/>
          <div><strong>Website Design & Development</strong></div>
        </div>
    <% end %>
  <% end %>

  <% unless (service == 'seo') %>
    <%= link_to seo_path, class: "col-md-3" do %>
        <div class="page-link">
          <%= image_tag 'icon-home-analysis-w.png' %><br/><br/>
          <div><strong>Search Engine Optimisation</strong></div>
        </div>
    <% end %>
  <% end %>

  <% unless (service == 'advertising') %>
    <%= link_to advertising_path, class: "col-md-3" do %>
        <div class="page-link">
          <%= image_tag 'icon-home-marketing-w.png' %><br/><br/>
          <div><strong>Pay Per Click</strong></div>
        </div>
    <% end %>
  <% end %>

  <% unless (service == 'social') %>
    <%= link_to social_path, class: "col-md-3" do %>
        <div class="page-link">
          <%= image_tag 'icon-home-social-media-w.png' %><br/><br/>
          <div><strong>Social Media</strong></div>
        </div>
    <% end %>
  <% end %>

</div>